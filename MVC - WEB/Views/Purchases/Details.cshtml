@model MVC_WEB.Models.ViewModels.PurchasesDetailsViewModel
@{
    ViewData["Title"] = $"Purchase Order - {Model.Order.OrderNumber}";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-file-invoice text-primary"></i> Purchase Order Details</h1>
            <p class="mb-0">View complete information for this purchase order</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Purchases
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Order.PurchaseOrderID" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit Order
            </a>
            <button type="button" class="btn btn-outline-info" onclick="window.print()">
                <i class="fas fa-print"></i> Print
            </button>
        </div>
    </div>
</div>

<div class="row">
    <!-- Order Details -->
    <div class="col-lg-8">
        <!-- Order Header Card -->
        <div class="dashboard-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle text-primary me-2"></i>Order Information
                </h5>
                <span class="badge @Model.StatusClass status-badge">
                    <i class="@Model.StatusIcon me-1"></i>@(Model.Order.Status ?? "Unknown")
                </span>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="detail-item">
                            <label class="text-muted small">Order Number</label>
                            <div class="h5 mb-0">@Model.Order.OrderNumber</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <label class="text-muted small">Order Date</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-calendar me-1 text-muted"></i>
                                @Model.Order.OrderDate.ToString("MMMM dd, yyyy")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <label class="text-muted small">Supplier</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-truck me-1 text-muted"></i>
                                @Model.Order.SupplierName
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <label class="text-muted small">Created By</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-user me-1 text-muted"></i>
                                @(Model.Order.CreatedByName ?? "System")
                            </div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Order.Notes))
                    {
                        <div class="col-12">
                            <div class="detail-item">
                                <label class="text-muted small">Notes</label>
                                <div class="p-3 bg-light rounded">
                                    <i class="fas fa-sticky-note me-1 text-muted"></i>
                                    @Model.Order.Notes
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Order Items Card -->
        <div class="dashboard-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list text-info me-2"></i>Order Items
                </h5>
                <span class="badge bg-primary">
                    @Model.Order.OrderItems.Count item(s)
                </span>
            </div>
            <div class="card-body">
                @if (Model.Order.OrderItems.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Product</th>
                                    <th class="text-center">Ordered</th>
                                    <th class="text-center">Received</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int itemIndex = 1;
                                }
                                @foreach (var item in Model.Order.OrderItems)
                                {
                                    var itemStatusClass = item.Status?.ToLower() switch
                                    {
                                        "received" => "bg-success",
                                        "partial" => "bg-warning",
                                        "pending" => "bg-secondary",
                                        "cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    
                                    <tr>
                                        <td>@itemIndex</td>
                                        <td>
                                            <div class="product-name">@item.ProductName</div>
                                            @if (!string.IsNullOrEmpty(item.BatchNumber))
                                            {
                                                <small class="text-muted">Batch: @item.BatchNumber</small>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@item.OrderedQuantity</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-success">@item.ReceivedQuantity</span>
                                        </td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end fw-bold">@item.TotalPrice.ToString("C")</td>
                                        <td class="text-center">
                                            <span class="badge @itemStatusClass">@(item.Status ?? "Pending")</span>
                                        </td>
                                    </tr>
                                    itemIndex++;
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="5" class="text-end fw-bold">Order Total:</td>
                                    <td class="text-end fw-bold text-success">@Model.Order.TotalAmount.ToString("C")</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No items in this order</h6>
                    </div>
                }
            </div>
        </div>

        <!-- Actions Card -->
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-cogs text-warning me-2"></i>Order Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap gap-2">
                    @if (Model.Order.Status?.ToLower() == "pending")
                    {
                        <form asp-action="ApproveOrder" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orderId" value="@Model.Order.PurchaseOrderID" />
                            <button type="submit" class="btn btn-info" onclick="return confirm('Approve this order?')">
                                <i class="fas fa-thumbs-up"></i> Approve Order
                            </button>
                        </form>
                        <form asp-action="ProcessOrder" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orderId" value="@Model.Order.PurchaseOrderID" />
                            <button type="submit" class="btn btn-success" onclick="return confirm('Process this order and update inventory?')">
                                <i class="fas fa-check-circle"></i> Process Order
                            </button>
                        </form>
                        <button type="button" class="btn btn-danger" onclick="showCancelModal()">
                            <i class="fas fa-times"></i> Cancel Order
                        </button>
                    }
                    <a asp-action="Edit" asp-route-id="@Model.Order.PurchaseOrderID" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Order
                    </a>
                    <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="fas fa-print"></i> Print
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Payment Summary -->
        <div class="dashboard-card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-credit-card text-success me-2"></i>Payment Summary
                </h6>
            </div>
            <div class="card-body">
                <div class="summary-metrics">
                    <div class="summary-metric">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Total Amount:</span>
                            <strong>@Model.Order.TotalAmount.ToString("C")</strong>
                        </div>
                    </div>
                    <div class="summary-metric">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Paid Amount:</span>
                            <strong class="text-success">@Model.Order.PaidAmount.ToString("C")</strong>
                        </div>
                    </div>
                    <div class="summary-metric">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Due Amount:</span>
                            <strong class="@(Model.Order.DueAmount > 0 ? "text-danger" : "text-success")">
                                @Model.Order.DueAmount.ToString("C")
                            </strong>
                        </div>
                    </div>
                    <div class="summary-metric">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Payment Status:</span>
                            @{
                                var paymentStatusClass = Model.Order.PaymentStatus?.ToLower() switch
                                {
                                    "paid" => "bg-success",
                                    "partial" => "bg-warning",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @paymentStatusClass">@(Model.Order.PaymentStatus ?? "Pending")</span>
                        </div>
                    </div>
                </div>
                
                <!-- Payment Progress -->
                <div class="mt-3">
                    <label class="text-muted small">Payment Progress</label>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar @(Model.IsFullyPaid ? "bg-success" : "bg-warning")" 
                             role="progressbar" 
                             style="width: @Model.PaidPercentage%;" 
                             aria-valuenow="@Model.PaidPercentage" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                            @Model.PaidPercentage.ToString("F0")%
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Timeline -->
        <div class="dashboard-card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-history text-info me-2"></i>Order Timeline
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item completed">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <div class="timeline-title">Order Created</div>
                            <div class="timeline-date">@Model.Order.OrderDate.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                    @if (Model.Order.Status?.ToLower() == "approved" || Model.Order.Status?.ToLower() == "processed" || Model.Order.Status?.ToLower() == "delivered")
                    {
                        <div class="timeline-item completed">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Order Approved</div>
                                <div class="timeline-date">Approved</div>
                            </div>
                        </div>
                    }
                    @if (Model.Order.Status?.ToLower() == "processed" || Model.Order.Status?.ToLower() == "delivered")
                    {
                        <div class="timeline-item completed">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Order Processed</div>
                                <div class="timeline-date">Inventory Updated</div>
                            </div>
                        </div>
                    }
                    @if (Model.Order.Status?.ToLower() == "delivered")
                    {
                        <div class="timeline-item completed">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Order Delivered</div>
                                <div class="timeline-date">@(Model.Order.ActualDeliveryDate?.ToString("MMM dd, yyyy") ?? "Delivered")</div>
                            </div>
                        </div>
                    }
                    @if (Model.Order.Status?.ToLower() == "cancelled")
                    {
                        <div class="timeline-item cancelled">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="timeline-title text-danger">Order Cancelled</div>
                                <div class="timeline-date">Cancelled</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-times-circle text-danger me-2"></i>Cancel Purchase Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CancelOrder" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="orderId" value="@Model.Order.PurchaseOrderID" />
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> You are about to cancel order <strong>@Model.Order.OrderNumber</strong>. This action cannot be undone.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason for cancellation *</label>
                        <textarea class="form-control" name="reason" rows="3" required
                                  placeholder="Please provide a reason for cancelling this order..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Order</button>
                    <button type="submit" class="btn btn-danger">Cancel Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .detail-item {
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
        }
        
        .detail-item label {
            display: block;
            margin-bottom: 0.25rem;
        }
        
        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        .summary-metric {
            padding: 0.75rem 0;
            border-bottom: 1px solid #f8f9fa;
        }
        
        .summary-metric:last-child {
            border-bottom: none;
        }
        
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }
        
        .timeline-item {
            position: relative;
            padding-bottom: 1.5rem;
        }
        
        .timeline-item:last-child {
            padding-bottom: 0;
        }
        
        .timeline-marker {
            position: absolute;
            left: -26px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #e9ecef;
            border: 2px solid #fff;
        }
        
        .timeline-item.completed .timeline-marker {
            background: #28a745;
        }
        
        .timeline-item.cancelled .timeline-marker {
            background: #dc3545;
        }
        
        .timeline-title {
            font-weight: 600;
            font-size: 0.875rem;
        }
        
        .timeline-date {
            font-size: 0.75rem;
            color: #6c757d;
        }
        
        .product-name {
            font-weight: 600;
        }
        
        @@media print {
            .btn, .page-header .d-flex.gap-2, .dashboard-card .card-header h5 i {
                display: none !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function showCancelModal() {
            var modal = new bootstrap.Modal(document.getElementById('cancelOrderModal'));
            modal.show();
        }
    </script>
}
