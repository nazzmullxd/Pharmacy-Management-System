@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="d-flex align-items-center">
        <div class="card-icon info me-3">
            <i class="fas fa-search"></i>
        </div>
        <div>
            <h1 class="text-info mb-0">404 - Page Not Found</h1>
            <p class="mb-0">The page you're looking for doesn't exist or has been moved.</p>
        </div>
    </div>
</div>

<div class="dashboard-card">
    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h5 class="text-muted">What happened?</h5>
                <p class="text-secondary">
                    The page you requested could not be found. This might be because:
                </p>
                <ul class="text-secondary">
                    <li>The URL was typed incorrectly</li>
                    <li>The page has been moved or deleted</li>
                    <li>The link you followed may be outdated</li>
                </ul>
            </div>

            <div class="mb-4">
                <h5 class="text-muted">Quick Links</h5>
                <div class="quick-actions">
                    <a asp-controller="Dashboard" asp-action="Index" class="quick-action-btn">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                    <a asp-controller="Sales" asp-action="New" class="quick-action-btn">
                        <i class="fas fa-shopping-cart"></i>
                        <span>New Sale</span>
                    </a>
                    <a asp-controller="Products" asp-action="Index" class="quick-action-btn">
                        <i class="fas fa-pills"></i>
                        <span>Products</span>
                    </a>
                    <a asp-controller="Customers" asp-action="Index" class="quick-action-btn">
                        <i class="fas fa-users"></i>
                        <span>Customers</span>
                    </a>
                </div>
            </div>

            <div class="d-flex gap-3">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Go to Dashboard
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </button>
            </div>
        </div>
        <div class="col-md-4 text-center d-none d-md-block">
            <i class="fas fa-map-signs text-muted" style="font-size: 8rem; opacity: 0.2;"></i>
        </div>
    </div>
</div>
