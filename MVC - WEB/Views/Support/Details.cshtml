@model MVC_WEB.Models.ViewModels.SupportDetailsViewModel
@{
    ViewData["Title"] = "Ticket Details";
    var isAdmin = Context.Session.GetString("role") == "Admin";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Ticket @Model.Ticket.TicketNumber</h1>
            <p class="text-muted mb-0">@Model.Ticket.Title</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Tickets
        </a>
    </div>

    <div class="row">
        <!-- Ticket Details -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Ticket Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Description</h6>
                        <p class="mb-0">@Model.Ticket.Description</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Ticket.Resolution))
                    {
                        <div class="alert alert-success">
                            <h6 class="alert-heading"><i class="bi bi-check-circle me-2"></i>Resolution</h6>
                            <p class="mb-0">@Model.Ticket.Resolution</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Admin: Update Status -->
            @if (isAdmin && Model.Ticket.Status != "Closed")
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Update Ticket</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.Ticket.TicketID" />
                            
                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <select name="status" class="form-select">
                                    <option value="Open" selected="@(Model.Ticket.Status == "Open")">Open</option>
                                    <option value="In Progress" selected="@(Model.Ticket.Status == "In Progress")">In Progress</option>
                                    <option value="Resolved" selected="@(Model.Ticket.Status == "Resolved")">Resolved</option>
                                    <option value="Closed" selected="@(Model.Ticket.Status == "Closed")">Closed</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Resolution Notes</label>
                                <textarea name="resolution" class="form-control" rows="3" placeholder="Enter resolution notes...">@Model.Ticket.Resolution</textarea>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Update Status
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Details</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <td class="text-muted">Status</td>
                                <td>
                                    <span class="badge bg-@(Model.Ticket.Status == "Closed" || Model.Ticket.Status == "Resolved" ? "success" : Model.Ticket.Status == "In Progress" ? "info" : "warning")">
                                        @Model.Ticket.Status
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">Priority</td>
                                <td>
                                    <span class="badge bg-@(Model.Ticket.Priority == "High" ? "danger" : Model.Ticket.Priority == "Normal" ? "warning" : "info")">
                                        @Model.Ticket.Priority
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">Category</td>
                                <td>@Model.Ticket.Category</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Created By</td>
                                <td>@Model.Ticket.CreatedByName</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Created Date</td>
                                <td>@Model.Ticket.CreatedDate.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Ticket.AssignedToName))
                            {
                                <tr>
                                    <td class="text-muted">Assigned To</td>
                                    <td>@Model.Ticket.AssignedToName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
