@model MVC_WEB.Models.ViewModels.CustomerDetailsViewModel
@{
    ViewData["Title"] = "Customer Details";
    var isAdmin = Context.Session.GetString("role") == "Admin";
    var isActive = Model.Customer.LastPurchaseDate.HasValue && Model.Customer.LastPurchaseDate >= DateTime.UtcNow.AddDays(-30);
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-user text-primary"></i> Customer Details</h1>
            <p class="mb-0">View detailed information about this customer</p>
        </div>
        <div class="d-flex gap-2">
            @if (isAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model.Customer.CustomerID" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Customer
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Customers
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Customer Profile Card -->
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body text-center py-4">
                <div class="customer-icon mb-3">
                    <i class="fas fa-user-circle fa-5x text-primary"></i>
                </div>
                <h4 class="mb-1">@Model.Customer.CustomerName</h4>
                <p class="text-muted mb-2">@Model.Customer.ContactNumber</p>
                
                @if (isActive)
                {
                    <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Active Customer</span>
                }
                else if (Model.Customer.LastPurchaseDate.HasValue)
                {
                    <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>Inactive</span>
                }
                else
                {
                    <span class="badge bg-secondary"><i class="fas fa-user-plus me-1"></i>New Customer</span>
                }
                
                <hr class="my-4" />
                
                <div class="row text-center">
                    <div class="col-6 border-end">
                        <h3 class="mb-0 text-success">৳@(Model.Customer.TotalPurchases?.ToString("F2") ?? "0.00")</h3>
                        <small class="text-muted">Total Purchases</small>
                    </div>
                    <div class="col-6">
                        <h3 class="mb-0 text-info">
                            @if (Model.Customer.LastPurchaseDate.HasValue)
                            {
                                @Model.Customer.LastPurchaseDate.Value.ToString("MMM dd")
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </h3>
                        <small class="text-muted">Last Purchase</small>
                    </div>
                </div>
                
                @if (isAdmin)
                {
                    <hr class="my-4" />
                    
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Customer.CustomerID" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-1"></i> Edit Customer
                        </a>
                        <a asp-controller="Sales" asp-action="Create" asp-route-customerId="@Model.Customer.CustomerID" class="btn btn-outline-success">
                            <i class="fas fa-shopping-cart me-1"></i> Create Sale
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Customer.CustomerID" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-1"></i> Delete Customer
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Customer Information -->
    <div class="col-lg-8">
        <!-- Contact Information Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Contact Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">CUSTOMER ID</label>
                        <p class="mb-0"><code>@Model.Customer.CustomerID</code></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">FULL NAME</label>
                        <p class="mb-0 fw-semibold">@Model.Customer.CustomerName</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">CONTACT NUMBER</label>
                        <p class="mb-0">
                            <i class="fas fa-phone me-1 text-muted"></i>
                            <a href="tel:@Model.Customer.ContactNumber" class="text-decoration-none">@Model.Customer.ContactNumber</a>
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">EMAIL ADDRESS</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Customer.Email))
                            {
                                <i class="fas fa-envelope me-1 text-muted"></i>
                                <a href="mailto:@Model.Customer.Email" class="text-decoration-none">@Model.Customer.Email</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </p>
                    </div>
                    <div class="col-12 mb-3">
                        <label class="form-label text-muted small">ADDRESS</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Customer.Address))
                            {
                                <i class="fas fa-map-marker-alt me-1 text-muted"></i>@Model.Customer.Address
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Purchase Statistics Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Purchase Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="p-3 bg-light rounded">
                            <h6 class="text-muted mb-2">Total Purchases</h6>
                            <h3 class="mb-0 text-success">৳@(Model.Customer.TotalPurchases?.ToString("F2") ?? "0.00")</h3>
                            <small class="text-muted">Lifetime value</small>
                        </div>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="p-3 bg-light rounded">
                            <h6 class="text-muted mb-2">Total Amount</h6>
                            <h3 class="mb-0 text-info">৳@(Model.Customer.TotalAmount?.ToString("F2") ?? "0.00")</h3>
                            <small class="text-muted">All transactions</small>
                        </div>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="p-3 bg-light rounded">
                            <h6 class="text-muted mb-2">Last Purchase</h6>
                            @if (Model.Customer.LastPurchaseDate.HasValue)
                            {
                                <h3 class="mb-0 text-primary">@Model.Customer.LastPurchaseDate.Value.ToString("MMM dd, yyyy")</h3>
                                <small class="text-muted">@Model.Customer.LastPurchaseDate.Value.ToString("hh:mm tt")</small>
                            }
                            else
                            {
                                <h3 class="mb-0 text-muted">N/A</h3>
                                <small class="text-muted">No purchases yet</small>
                            }
                        </div>
                    </div>
                </div>

                <hr />
                
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-controller="Sales" asp-action="Index" asp-route-customerId="@Model.Customer.CustomerID" class="btn btn-outline-info">
                        <i class="fas fa-history me-1"></i> View Purchase History
                    </a>
                    @if (isAdmin)
                    {
                        <a asp-controller="Sales" asp-action="Create" asp-route-customerId="@Model.Customer.CustomerID" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i> Create New Sale
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Registration Info Card -->
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Registration Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">REGISTRATION DATE</label>
                        <p class="mb-0">
                            <i class="fas fa-calendar me-1 text-muted"></i>
                            @Model.Customer.CreatedDate.ToString("MMMM dd, yyyy")
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">REGISTRATION TIME</label>
                        <p class="mb-0">
                            <i class="fas fa-clock me-1 text-muted"></i>
                            @Model.Customer.CreatedDate.ToString("hh:mm:ss tt")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">CUSTOMER STATUS</label>
                        <p class="mb-0">
                            @if (isActive)
                            {
                                <span class="badge bg-success">Active</span>
                                <small class="text-muted ms-2">Last active within 30 days</small>
                            }
                            else if (Model.Customer.LastPurchaseDate.HasValue)
                            {
                                <span class="badge bg-warning text-dark">Inactive</span>
                                <small class="text-muted ms-2">No recent activity</small>
                            }
                            else
                            {
                                <span class="badge bg-secondary">New</span>
                                <small class="text-muted ms-2">No purchases yet</small>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">DAYS SINCE LAST PURCHASE</label>
                        <p class="mb-0">
                            @if (Model.Customer.LastPurchaseDate.HasValue)
                            {
                                var daysSince = (DateTime.UtcNow - Model.Customer.LastPurchaseDate.Value).Days;
                                <span class="@(daysSince <= 30 ? "text-success" : daysSince <= 90 ? "text-warning" : "text-danger")">
                                    @daysSince days ago
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
