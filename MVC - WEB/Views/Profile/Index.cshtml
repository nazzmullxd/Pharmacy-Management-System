@model MVC_WEB.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">My Profile</h1>
            <p class="text-muted mb-0">View and manage your account information</p>
        </div>
        <div>
            <a asp-action="Edit" class="btn btn-primary me-2">
                <i class="bi bi-pencil me-1"></i> Edit Profile
            </a>
            <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                <i class="bi bi-key me-1"></i> Change Password
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Profile Card -->
        <div class="col-lg-4 mb-4">
            <div class="card text-center">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            @Model.FullName.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                    <h4 class="mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-2">@Model.Email</p>
                    <span class="badge bg-@(Model.Role == "Admin" ? "danger" : "primary") mb-3">
                        @Model.Role
                    </span>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Details -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Full Name</div>
                        <div class="col-sm-8">@Model.FullName</div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Email Address</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Role</div>
                        <div class="col-sm-8">
                            <span class="badge bg-@(Model.Role == "Admin" ? "danger" : "primary")">
                                @Model.Role
                            </span>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Account Status</div>
                        <div class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="text-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                            }
                            else
                            {
                                <span class="text-danger"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                            }
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">User ID</div>
                        <div class="col-sm-8">@Model.UserID</div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-action="Edit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-pencil me-2"></i>Edit Profile
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-action="ChangePassword" class="btn btn-outline-warning w-100">
                                <i class="bi bi-key me-2"></i>Change Password
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-gear me-2"></i>Settings
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Support" asp-action="Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-headset me-2"></i>Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
