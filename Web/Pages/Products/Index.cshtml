@page
@model Web.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-pills"></i> Products Management</h1>
    <p>Manage your pharmacy's product catalog, inventory, and pricing information.</p>
</div>

<!-- Action Buttons -->
<div class="row mb-4">
    <div class="col-md-6">
        <a href="/Products/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
        <a href="/Products/Categories" class="btn btn-outline-secondary">
            <i class="fas fa-tags"></i> Manage Categories
        </a>
    </div>
    <div class="col-md-6">
        <div class="input-group">
            <input type="text" class="form-control search-input" placeholder="Search products...">
            <button class="btn btn-outline-secondary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>

<!-- Products Table -->
<div class="table-container">
    <h5><i class="fas fa-list"></i> All Products</h5>
    <div class="table-responsive">
        <table class="table table-hover" id="productsTable">
            <thead>
                <tr>
                    <th data-sort="0">Product Name</th>
                    <th data-sort="1">Generic Name</th>
                    <th data-sort="2">Category</th>
                    <th data-sort="3">Manufacturer</th>
                    <th data-sort="4">Unit Price</th>
                    <th data-sort="5">Stock</th>
                    <th data-sort="6">Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null && Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                <strong>@product.ProductName</strong>
                                @if (!string.IsNullOrEmpty(product.Barcode))
                                {
                                    <br><small class="text-muted">Barcode: @product.Barcode</small>
                                }
                            </td>
                            <td>@product.GenericName</td>
                            <td><span class="badge badge-info">@product.Category</span></td>
                            <td>@product.Manufacturer</td>
                            <td>$@product.UnitPrice.ToString("F2")</td>
                            <td>
                                @if (product.IsLowStock)
                                {
                                    <span class="badge badge-warning">@product.TotalStock (Low)</span>
                                }
                                else if (product.TotalStock == 0)
                                {
                                    <span class="badge badge-danger">Out of Stock</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">@product.TotalStock</span>
                                }
                            </td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Products/Edit/@product.ProductID" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/Products/Details/@product.ProductID" class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" title="Delete" onclick="confirmDelete('@product.ProductID', '@product.ProductName')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="fas fa-box-open fa-3x mb-3"></i>
                            <br>No products found. <a href="/Products/Create">Add your first product</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.Products != null && Model.Products.Count() > 10)
{
    <nav aria-label="Products pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            if (confirm(`Are you sure you want to delete "${productName}"? This action cannot be undone.`)) {
                // In a real implementation, this would make an API call
                showAlert('Product deleted successfully', 'success');
                // Remove the row from the table
                event.target.closest('tr').remove();
            }
        }
    </script>
}
