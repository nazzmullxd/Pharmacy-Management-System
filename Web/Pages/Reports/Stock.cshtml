@page
@model Web.Pages.Reports.StockModel
@{
    ViewData["Title"] = "Stock Reports";
}

<div class="page-header">
    <h1><i class="fas fa-chart-bar"></i> Stock Reports</h1>
    <a class="btn btn-secondary" href="/">Back to Dashboard</a>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <h3 class="text-primary">@Model.Products.Count()</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Batches</h5>
                <h3 class="text-info">@Model.Batches.Count()</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Low Stock Items</h5>
                <h3 class="text-warning">@Model.LowStockCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Value</h5>
                <h3 class="text-success">@Model.TotalStockValue.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Low Stock Products</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Stock</th>
                                <th>Threshold</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Products.Where(x => x.IsLowStock).Take(10))
                            {
                                <tr>
                                    <td>@p.ProductName</td>
                                    <td>@p.TotalStock</td>
                                    <td>@p.LowStockThreshold</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Expiring Items (30 days)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Batch</th>
                                <th>Expiry</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ExpiringItems.Take(10))
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.BatchNumber</td>
                                    <td>@item.ExpiryDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

