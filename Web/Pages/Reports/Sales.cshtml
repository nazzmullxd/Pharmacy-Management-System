@page
@model Web.Pages.Reports.SalesModel
@{
    ViewData["Title"] = "Sales Reports";
}

<div class="page-header">
    <h1><i class="fas fa-chart-line"></i> Sales Reports</h1>
    <a class="btn btn-secondary" href="/">Back to Dashboard</a>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Sales</h5>
                <h3 class="text-success">@Model.TotalSales.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Invoices</h5>
                <h3 class="text-primary">@Model.TotalInvoices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Today's Sales</h5>
                <h3 class="text-info">@Model.TodaySales.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">This Month</h5>
                <h3 class="text-warning">@Model.MonthlySales.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Top Selling Products</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity Sold</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.TopProducts.Take(10))
                            {
                                <tr>
                                    <td>@p.ProductName</td>
                                    <td>@p.TotalQuantitySold</td>
                                    <td>@p.TotalRevenue.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Recent Sales</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.Sales.OrderByDescending(x => x.SaleDate).Take(10))
                            {
                                <tr>
                                    <td>@s.SaleDate.ToString("MMM dd")</td>
                                    <td>@s.CustomerName</td>
                                    <td>@s.TotalAmount.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

