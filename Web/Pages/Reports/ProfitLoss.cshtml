@page
@model Web.Pages.Reports.ProfitLossModel
@{
    ViewData["Title"] = "Profit & Loss";
}

<div class="page-header">
    <h1><i class="fas fa-calculator"></i> Profit & Loss</h1>
    <a class="btn btn-secondary" href="/">Back to Dashboard</a>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Revenue</h5>
                <h3 class="text-success">@Model.TotalRevenue.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Cost</h5>
                <h3 class="text-danger">@Model.TotalCost.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Gross Profit</h5>
                <h3 class="@(Model.GrossProfit >= 0 ? "text-success" : "text-danger")">@Model.GrossProfit.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Profit Margin</h5>
                <h3 class="@(Model.ProfitMargin >= 0 ? "text-success" : "text-danger")">@Model.ProfitMargin.ToString("F1")%</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Financial Summary</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>Revenue Breakdown</h6>
                <p>Total Sales: <strong>@Model.TotalRevenue.ToString("C")</strong></p>
                <p>Number of Transactions: <strong>@Model.Sales.Count()</strong></p>
                <p>Average Sale: <strong>@(Model.Sales.Any() ? (Model.TotalRevenue / Model.Sales.Count()).ToString("C") : "$0.00")</strong></p>
            </div>
            <div class="col-md-6">
                <h6>Cost Analysis</h6>
                <p>Estimated Cost of Goods: <strong>@Model.TotalCost.ToString("C")</strong></p>
                <p>Gross Profit: <strong class="@(Model.GrossProfit >= 0 ? "text-success" : "text-danger")">@Model.GrossProfit.ToString("C")</strong></p>
                <p>Profit Margin: <strong class="@(Model.ProfitMargin >= 0 ? "text-success" : "text-danger")">@Model.ProfitMargin.ToString("F1")%</strong></p>
            </div>
        </div>
    </div>
</div>

