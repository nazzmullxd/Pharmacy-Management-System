@page
@model Web.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Add Customer";
}

<div class="page-header">
    <h1><i class="fas fa-user-plus"></i> Add Customer</h1>
    <a class="btn btn-secondary" href="/Customers">Back to Customers</a>
</div>
<form method="post" class="card p-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input asp-for="Customer.CustomerName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Contact</label>
            <input asp-for="Customer.ContactNumber" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Customer.Email" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Address</label>
            <input asp-for="Customer.Address" class="form-control" />
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
    <div asp-validation-summary="All" class="text-danger mt-2"></div>
</form>
