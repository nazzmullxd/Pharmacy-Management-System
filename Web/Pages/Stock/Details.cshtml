@page "/Stock/Details/{id}"
@model Web.Pages.Stock.DetailsModel
@{
    ViewData["Title"] = "Stock Item Details";
}

<div class="page-header">
    <h1><i class="fas fa-eye"></i> Stock Item Details</h1>
    <a class="btn btn-secondary" href="/Stock">Back to Stock</a>
</div>
@if (Model.Product != null)
{
    <div class="card p-3 mb-3">
        <h5>@Model.Product.ProductName</h5>
        <div>Manufacturer: @Model.Product.Manufacturer</div>
        <div>Category: @Model.Product.Category</div>
        <div>Price: @Model.Product.UnitPrice.ToString("C")</div>
        <div>Total Stock: @Model.Product.TotalStock</div>
    </div>
    <div class="table-responsive card p-3">
        <h6>Batches</h6>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Batch</th>
                    <th>Expiry</th>
                    <th>Qty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.Batches)
                {
                    <tr>
                        <td>@b.BatchNumber</td>
                        <td>@b.ExpiryDate.ToString("yyyy-MM-dd")</td>
                        <td>@b.QuantityInStock</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">Product not found.</div>
}
