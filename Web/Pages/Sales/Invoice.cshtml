@page "/Sales/Invoice/{id}"
@model Web.Pages.Sales.InvoiceModel
@{
    ViewData["Title"] = "Invoice";
    Layout = null; // Remove layout for clean printing
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice #@(Model.Sale?.SaleID.ToString().Substring(0,8) ?? "Unknown")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }
        
        .invoice-container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        
        .invoice-header {
            border-bottom: 3px solid #0d6efd;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        
        .company-logo {
            font-size: 2.5rem;
            color: #0d6efd;
            margin-bottom: 10px;
        }
        
        .company-info {
            color: #6c757d;
            line-height: 1.6;
        }
        
        .invoice-title {
            font-size: 2rem;
            color: #0d6efd;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .invoice-number {
            font-size: 1.2rem;
            color: #6c757d;
        }
        
        .bill-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        
        .bill-info h6 {
            color: #0d6efd;
            font-weight: bold;
            margin-bottom: 15px;
        }
        
        .invoice-table {
            margin-bottom: 30px;
        }
        
        .invoice-table th {
            background-color: #0d6efd;
            color: white;
            font-weight: 600;
            padding: 15px 10px;
            border: none;
        }
        
        .invoice-table td {
            padding: 12px 10px;
            border-bottom: 1px solid #dee2e6;
            vertical-align: middle;
        }
        
        .invoice-table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .total-section {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #0d6efd;
        }
        
        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding: 5px 0;
        }
        
        .total-row.grand-total {
            font-size: 1.3rem;
            font-weight: bold;
            color: #0d6efd;
            border-top: 2px solid #0d6efd;
            padding-top: 15px;
            margin-top: 15px;
        }
        
        .payment-status {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 0.9rem;
        }
        
        .payment-status.paid {
            background-color: #d1e7dd;
            color: #0f5132;
            border: 1px solid #badbcc;
        }
        
        .payment-status.pending {
            background-color: #fff3cd;
            color: #664d03;
            border: 1px solid #ffecb5;
        }
        
        .payment-status.partial {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c2c7;
        }
        
        .invoice-footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
            text-align: center;
            color: #6c757d;
        }
        
        .action-buttons {
            margin: 20px 0;
            text-align: center;
        }
        
        .notes-section {
            background-color: #fff3cd;
            border: 1px solid #ffecb5;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
        }
        
        /* Print styles */
        @@media print {
            body {
                background: white !important;
                font-size: 12pt;
            }
            
            .invoice-container {
                box-shadow: none !important;
                margin: 0 !important;
                padding: 0 !important;
                max-width: none !important;
            }
            
            .action-buttons {
                display: none !important;
            }
            
            .invoice-table th,
            .invoice-table td {
                padding: 8px 6px !important;
            }
            
            .company-logo {
                font-size: 2rem !important;
            }
            
            .invoice-title {
                font-size: 1.5rem !important;
            }
        }
        
        @@media screen and (max-width: 768px) {
            .invoice-container {
                margin: 10px;
                padding: 20px;
            }
            
            .invoice-table {
                font-size: 0.9rem;
            }
            
            .company-logo {
                font-size: 2rem;
            }
            
            .invoice-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        @if (Model.Sale != null)
        {
            <!-- Action Buttons (hidden in print) -->
            <div class="action-buttons d-print-none">
                <a href="/Sales" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Back to Sales
                </a>
                <button class="btn btn-primary me-2" onclick="window.print()">
                    <i class="fas fa-print"></i> Print Invoice
                </button>
                <a href="/Sales/Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> New Sale
                </a>
            </div>

            <!-- Invoice Header -->
            <div class="invoice-header">
                <div class="row">
                    <div class="col-md-6">
                        <div class="company-logo">
                            <i class="fas fa-pills"></i> Rabiul Pharmacy
                        </div>
                        <div class="company-info">
                            <strong>Pharmacy Management System</strong><br>
                            123 Healthcare Avenue<br>
                            Medical District, Health City 12345<br>
                            Phone: (555) 123-4567<br>
                            Email: info@rabiulpharmacy.com
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="invoice-title">INVOICE</div>
                        <div class="invoice-number">#@Model.Sale.SaleID.ToString().Substring(0,8)</div>
                        <div class="mt-3">
                            <strong>Date:</strong> @Model.Sale.SaleDate.ToString("MMMM dd, yyyy")<br>
                            <strong>Time:</strong> @Model.Sale.SaleDate.ToString("HH:mm")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Billing Information -->
            <div class="row">
                <div class="col-md-6">
                    <div class="bill-info">
                        <h6><i class="fas fa-user"></i> Bill To:</h6>
                        <strong>@(string.IsNullOrEmpty(Model.Sale.CustomerName) ? "Walk-in Customer" : Model.Sale.CustomerName)</strong><br>
                        @if (!string.IsNullOrEmpty(Model.Sale.CustomerName) && Model.Sale.CustomerName != "Walk-in Customer")
                        {
                            <span class="text-muted">Customer ID: @Model.Sale.CustomerID.ToString().Substring(0,8)</span>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="bill-info">
                        <h6><i class="fas fa-info-circle"></i> Sale Information:</h6>
                        <strong>Payment Status:</strong> 
                        <span class="payment-status @(Model.Sale.PaymentStatus.ToLower())">
                            @Model.Sale.PaymentStatus
                        </span><br>
                        <strong>Processed by:</strong> @(Model.Sale.UserName ?? "System User")<br>
                        <strong>Total Items:</strong> @Model.Sale.SaleItems.Count
                    </div>
                </div>
            </div>

            <!-- Items Table -->
            <div class="table-responsive">
                <table class="table invoice-table">
                    <thead>
                        <tr>
                            <th style="width: 10%">#</th>
                            <th style="width: 40%">Product Name</th>
                            <th style="width: 15%" class="text-center">Quantity</th>
                            <th style="width: 15%" class="text-end">Unit Price</th>
                            <th style="width: 10%" class="text-end">Discount</th>
                            <th style="width: 15%" class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Sale.SaleItems.Count; i++)
                        {
                            var item = Model.Sale.SaleItems[i];
                            <tr>
                                <td class="text-center">@(i + 1)</td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                    @if (!string.IsNullOrEmpty(item.BatchNumber) && item.BatchNumber != "N/A")
                                    {
                                        <br><small class="text-muted">Batch: @item.BatchNumber</small>
                                    }
                                </td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">$@item.UnitPrice.ToString("F2")</td>
                                <td class="text-end">
                                    @if (item.Discount > 0)
                                    {
                                        <span class="text-danger">-$@item.Discount.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">$0.00</span>
                                    }
                                </td>
                                <td class="text-end"><strong>$@item.TotalPrice.ToString("F2")</strong></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Totals Section -->
            <div class="row">
                <div class="col-md-6 offset-md-6">
                    <div class="total-section">
                        <div class="total-row">
                            <span>Subtotal:</span>
                            <span>$@Model.Sale.SaleItems.Sum(x => x.Quantity * x.UnitPrice).ToString("F2")</span>
                        </div>
                        <div class="total-row">
                            <span>Total Discount:</span>
                            <span class="text-danger">-$@Model.Sale.SaleItems.Sum(x => x.Discount).ToString("F2")</span>
                        </div>
                        <div class="total-row grand-total">
                            <span>Grand Total:</span>
                            <span>$@Model.Sale.TotalAmount.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes Section -->
            @if (!string.IsNullOrEmpty(Model.Sale.Note))
            {
                <div class="notes-section">
                    <h6><i class="fas fa-sticky-note"></i> Notes:</h6>
                    <p class="mb-0">@Model.Sale.Note</p>
                </div>
            }

            <!-- Invoice Footer -->
            <div class="invoice-footer">
                <p class="mb-2"><strong>Thank you for your business!</strong></p>
                <p class="mb-1">For any questions about this invoice, please contact us at (555) 123-4567</p>
                <p class="mb-0">Generated on @DateTime.Now.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                <h3 class="mt-3">Invoice Not Found</h3>
                <p class="text-muted">The requested invoice could not be found.</p>
                <a href="/Sales" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to Sales
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


