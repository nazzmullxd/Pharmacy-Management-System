@page "/Sales/Invoice/{id}"
@model Web.Pages.Sales.InvoiceModel
@{
    ViewData["Title"] = "Invoice";
}

<div class="page-header">
    <h1><i class="fas fa-print"></i> Invoice</h1>
    <a class="btn btn-secondary" href="/Sales">Back to Sales</a>
    <button class="btn btn-primary" onclick="window.print()">Print</button>
</div>

@if (Model.Sale != null)
{
    <div class="dashboard-card">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Invoice:</strong> #@Model.Sale.SaleID.ToString().Substring(0,8)</p>
                <p><strong>Date:</strong> @Model.Sale.SaleDate.ToString("yyyy-MM-dd HH:mm")</p>
                <p><strong>Customer:</strong> @Model.Sale.CustomerName</p>
            </div>
            <div class="col-md-6">
                <p><strong>Total:</strong> $@Model.Sale.TotalAmount.ToString("F2")</p>
                <p><strong>Status:</strong> @Model.Sale.PaymentStatus</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Invoice not found.</div>
}


