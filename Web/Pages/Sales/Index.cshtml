@page
@model Web.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Sales Orders";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-shopping-cart"></i> Sales Orders</h1>
    <p>Manage your pharmacy's sales transactions and customer orders.</p>
</div>

<!-- Action Buttons -->
<div class="row mb-4">
    <div class="col-md-6">
        <a href="/Sales/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Sale Order
        </a>
        <a href="/Sales/Invoices" class="btn btn-outline-info">
            <i class="fas fa-file-invoice"></i> View Invoices
        </a>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <select class="form-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="Paid">Paid</option>
                    <option value="Pending">Pending</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control search-input" placeholder="Search sales...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sales Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-title">Today's Sales</div>
                <div class="kpi-icon" style="background: #27ae60;">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
            <div class="kpi-value">$@Model.TodaySales.ToString("N0")</div>
            <div class="kpi-change positive">
                <i class="fas fa-arrow-up"></i> +@Model.TodaySalesCount sales
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-title">This Month</div>
                <div class="kpi-icon" style="background: #3498db;">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
            <div class="kpi-value">$@Model.MonthlySales.ToString("N0")</div>
            <div class="kpi-change positive">
                <i class="fas fa-arrow-up"></i> +@Model.MonthlySalesCount sales
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-title">Pending Orders</div>
                <div class="kpi-icon" style="background: #f39c12;">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
            <div class="kpi-value">@Model.PendingOrders</div>
            <div class="kpi-change">
                <i class="fas fa-exclamation-triangle"></i> Requires attention
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-title">Total Orders</div>
                <div class="kpi-icon" style="background: #9b59b6;">
                    <i class="fas fa-receipt"></i>
                </div>
            </div>
            <div class="kpi-value">@Model.TotalOrders</div>
            <div class="kpi-change positive">
                <i class="fas fa-arrow-up"></i> All time
            </div>
        </div>
    </div>
</div>

<!-- Sales Table -->
<div class="table-container">
    <h5><i class="fas fa-list"></i> Recent Sales Orders</h5>
    <div class="table-responsive">
        <table class="table table-hover" id="salesTable">
            <thead>
                <tr>
                    <th data-sort="0">Sale ID</th>
                    <th data-sort="1">Customer</th>
                    <th data-sort="2">Date</th>
                    <th data-sort="3">Items</th>
                    <th data-sort="4">Total Amount</th>
                    <th data-sort="5">Status</th>
                    <th data-sort="6">Cashier</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Sales != null && Model.Sales.Any())
                {
                    @foreach (var sale in Model.Sales)
                    {
                        <tr>
                            <td>
                                <strong>#@sale.SaleID.ToString().Substring(0, 8)</strong>
                            </td>
                            <td>
                                @sale.CustomerName
                                @if (!string.IsNullOrEmpty(sale.CustomerName) && sale.CustomerName != "Walk-in Customer")
                                {
                                    <br><small class="text-muted">Customer</small>
                                }
                                else
                                {
                                    <br><small class="text-muted">Walk-in</small>
                                }
                            </td>
                            <td>
                                @sale.SaleDate.ToString("MMM dd, yyyy")
                                <br><small class="text-muted">@sale.SaleDate.ToString("hh:mm tt")</small>
                            </td>
                            <td>
                                <span class="badge badge-info">@sale.SaleItems.Count items</span>
                            </td>
                            <td>
                                <strong>$@sale.TotalAmount.ToString("F2")</strong>
                            </td>
                            <td>
                                @if (sale.PaymentStatus == "Paid")
                                {
                                    <span class="badge badge-success">@sale.PaymentStatus</span>
                                }
                                else if (sale.PaymentStatus == "Pending")
                                {
                                    <span class="badge badge-warning">@sale.PaymentStatus</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">@sale.PaymentStatus</span>
                                }
                            </td>
                            <td>
                                @sale.UserName
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Sales/Details/@sale.SaleID" class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/Sales/Invoice/@sale.SaleID" class="btn btn-sm btn-outline-primary" title="Print Invoice">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    @if (sale.PaymentStatus == "Pending")
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-success" title="Mark as Paid" onclick="markAsPaid('@sale.SaleID')">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                            <br>No sales found. <a href="/Sales/Create">Create your first sale</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.Sales != null && Model.Sales.Count() > 10)
{
    <nav aria-label="Sales pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        function markAsPaid(saleId) {
            if (confirm('Are you sure you want to mark this sale as paid?')) {
                // In a real implementation, this would make an API call
                showAlert('Sale marked as paid successfully', 'success');
                // Update the status in the table
                const row = event.target.closest('tr');
                const statusCell = row.querySelector('td:nth-child(6)');
                statusCell.innerHTML = '<span class="badge badge-success">Paid</span>';
            }
        }

        // Status filter functionality
        document.getElementById('statusFilter').addEventListener('change', function() {
            const filterValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('#salesTable tbody tr');
            
            rows.forEach(row => {
                const statusCell = row.querySelector('td:nth-child(6)');
                const status = statusCell.textContent.toLowerCase();
                
                if (filterValue === '' || status.includes(filterValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}
