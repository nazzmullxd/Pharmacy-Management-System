@page
@model Web.Pages.Purchases.CreateModel
@{
    ViewData["Title"] = "New Purchase";
}

<div class="page-header">
    <h1><i class="fas fa-plus"></i> New Purchase</h1>
    <a class="btn btn-secondary" href="/Purchases">Back to Purchases</a>
</div>
<form method="post" class="card p-3">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Supplier</label>
            <select asp-for="Order.SupplierID" class="form-select">
                <option value="">-- Select Supplier --</option>
                @foreach (var s in Model.Suppliers)
                {
                    <option value="@s.SupplierID">@s.SupplierName</option>
                }
            </select>
        </div>
        <div class="col-md-8">
            <label class="form-label">Notes</label>
            <input asp-for="Order.Notes" class="form-control" />
        </div>
    </div>

    <hr />
    <h5>Add Items</h5>
    <div class="row g-2 align-items-end">
        <div class="col-md-5">
            <label class="form-label">Product</label>
            <select name="productId" class="form-select">
                <option value="">-- Select Product --</option>
                @foreach (var p in Model.Products)
                {
                    <option value="@p.ProductID">@p.ProductName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Quantity</label>
            <input name="quantity" type="number" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Unit Price</label>
            <input name="unitPrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-1">
            <button type="submit" asp-page-handler="AddItem" class="btn btn-outline-primary">Add</button>
        </div>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Unit</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Order.OrderItems)
                {
                    <tr>
                        <td>@i.ProductName</td>
                        <td>@i.OrderedQuantity</td>
                        <td>@i.UnitPrice.ToString("C")</td>
                        <td>@i.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end">
        <div><strong>Total:</strong> @Model.Order.TotalAmount.ToString("C")</div>
        <button type="submit" asp-page-handler="Create" class="btn btn-success mt-2">Create Order</button>
    </div>

    <div asp-validation-summary="All" class="text-danger mt-2"></div>
</form>

