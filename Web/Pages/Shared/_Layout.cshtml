<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - M/S Rabiul Pharmacy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-pills"></i> M/S Rabiul Pharmacy</h3>
                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i class="fas fa-align-left"></i>
                </button>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="#pharmacySubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                        <i class="fas fa-building"></i>
                        <span>Pharmacy Info</span>
                    </a>
                    <ul class="collapse list-unstyled" id="pharmacySubmenu">
                        <li><a href="/Pharmacy/Info" class="nav-link">Information</a></li>
                        <li><a href="/Pharmacy/Settings" class="nav-link">Settings</a></li>
                    </ul>
                </li>
                <li>
                    <a href="/Customers" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Customers</span>
                    </a>
                </li>
                <li>
                    <a href="#salesSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Sales</span>
                    </a>
                    <ul class="collapse list-unstyled" id="salesSubmenu">
                        <li><a href="/Sales/Orders" class="nav-link">Sale Orders</a></li>
                        <li><a href="/Sales/Invoices" class="nav-link">Invoices</a></li>
                        <li><a href="/Sales/New" class="nav-link">New Sale</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#stockSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                        <i class="fas fa-boxes"></i>
                        <span>Stock Management</span>
                    </a>
                    <ul class="collapse list-unstyled" id="stockSubmenu">
                        <li><a href="/Stock/Items" class="nav-link">Stock Items</a></li>
                        <li><a href="/Stock/Batches" class="nav-link">Batch Wise Items</a></li>
                        <li><a href="/Stock/Adjustments" class="nav-link">Stock Adjustments</a></li>
                        <li><a href="/Stock/Expiring" class="nav-link">Expiring Stocks</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#productsSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                        <i class="fas fa-pills"></i>
                        <span>Products</span>
                    </a>
                    <ul class="collapse list-unstyled" id="productsSubmenu">
                        <li><a href="/Products" class="nav-link">All Products</a></li>
                        <li><a href="/Products/Categories" class="nav-link">Categories</a></li>
                        <li><a href="/Products/New" class="nav-link">Add Product</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#purchaseSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                        <i class="fas fa-truck"></i>
                        <span>Purchases</span>
                    </a>
                    <ul class="collapse list-unstyled" id="purchaseSubmenu">
                        <li><a href="/Purchases/Orders" class="nav-link">Purchase Orders</a></li>
                        <li><a href="/Purchases/New" class="nav-link">New Purchase</a></li>
                        <li><a href="/Suppliers" class="nav-link">Suppliers</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#reportsSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                    </a>
                    <ul class="collapse list-unstyled" id="reportsSubmenu">
                        <li><a href="/Reports/Sales" class="nav-link">Sales Reports</a></li>
                        <li><a href="/Reports/Stock" class="nav-link">Stock Reports</a></li>
                        <li><a href="/Reports/ProfitLoss" class="nav-link">Profit & Loss</a></li>
                        <li><a href="/Reports/Antibiotic" class="nav-link">Antibiotic Register</a></li>
                    </ul>
                </li>
                <li>
                    <a href="/Support" class="nav-link">
                        <i class="fas fa-life-ring"></i>
                        <span>Support</span>
                    </a>
                </li>
                <li>
                    <a href="/Users" class="nav-link">
                        <i class="fas fa-user-cog"></i>
                        <span>User Management</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i> Admin User
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user-edit"></i> Profile</a></li>
                                <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog"></i> Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>