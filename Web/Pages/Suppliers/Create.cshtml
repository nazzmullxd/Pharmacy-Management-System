@page
@model Web.Pages.Suppliers.CreateModel
@{
    ViewData["Title"] = "Add Supplier";
}

<div class="page-header">
    <h1><i class="fas fa-user-plus"></i> Add Supplier</h1>
    <a class="btn btn-secondary" href="/Suppliers">Back to Suppliers</a>
</div>

<form method="post" class="card p-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input asp-for="Supplier.SupplierName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Contact Person</label>
            <input asp-for="Supplier.ContactPerson" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Phone</label>
            <input asp-for="Supplier.PhoneNumber" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Supplier.Email" class="form-control" />
        </div>
        <div class="col-md-12">
            <label class="form-label">Address</label>
            <input asp-for="Supplier.Address" class="form-control" />
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
    <div asp-validation-summary="All" class="text-danger mt-2"></div>
</form>

